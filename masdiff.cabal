    -- other-extensions:
    build-depends:    base ^>=4.21.0.0
                    , array
    hs-source-dirs:   lib
    default-language: GHC2024

test-suite msdf-tests
    import:           warnings
    type:             exitcode-stdio-1.0
    hs-source-dirs:   tests
    main-is:          MSDFTests.hs
    build-depends:    base ^>=4.21.0.0
                    , array
                    , masdiff
    default-language: GHC2024
