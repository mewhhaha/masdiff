common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  MyLib
                    , MSDF.Types
                    , MSDF.Binary
                    , MSDF.TTF.Parser
                    , MSDF.TTF.GPOS
                    , MSDF.Outline
                    , MSDF.MSDF
                    , MSDF.Generated
